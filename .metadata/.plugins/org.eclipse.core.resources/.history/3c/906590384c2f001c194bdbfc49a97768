package com.ICINBank.ICINbanking.model;

import java.util.Date;

import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.Id;
import javax.persistence.ManyToOne;
import javax.persistence.NamedQueries;
import javax.persistence.NamedQuery;
import javax.persistence.OneToMany;

import lombok.Data;

@Entity
@Data
@NamedQueries(value= {
@NamedQuery(name="SavingsAccountTransaction.getBySavingsActNo",query="select srt from SavingsAccountTransaction srt where srt.savingsAcc.savingActNo =?1"),

@NamedQuery(name="SavingsAccountTransaction.findByAccountNum",query="select srt from SavingsAccountTransaction srt where srt.savingsAcc.savingActNo = ?1")})
public class SavingsAccountTransaction {
	
	@Id
	@GeneratedValue
	private int transactionId;
	
	@ManyToOne
	private SavingsAccount savingsAcc;
	
	private int fromAccount;	
	private int toAccount;
	private Date date;
	private Long prevBalance;
	private Long availableBalance;
	private String transactionType;

}
